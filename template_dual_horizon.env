# Enhanced Environment Configuration for Dual-Horizon Crypto Trading RL System

# Environment Settings
ENVIRONMENT=dev
BASE_PATH=./data
PRIMARY_ASSET=BTCUSDT
LOG_LEVEL=INFO

# Training Parameters
TOTAL_TIMESTEPS=500000
OPTIMIZATION_TRIALS=20

# âœ… NEW: Dual-Horizon Reward System Configuration
# Reward horizon in steps (9 steps = 3 minutes for 20-second bars)
REWARD_HORIZON_STEPS=9

# Weight for immediate vs delayed rewards (should sum to 1.0)
IMMEDIATE_REWARD_WEIGHT=0.3
DELAYED_REWARD_WEIGHT=0.7

# Enable immediate realized PnL tracking for closed positions
ENABLE_IMMEDIATE_PNL_TRACKING=true

# Risk Management & Leverage
LEVERAGE=10.0
MAX_POSITION_SIZE=1.0
MAX_DRAWDOWN_THRESHOLD=0.2
MAINTENANCE_MARGIN_RATE=0.01

# Trading Costs
TRANSACTION_FEE=0.001
SLIPPAGE=0.0005

# Advanced Reward Tuning (Optional - defaults will be used if not set)
# These allow fine-tuning of the reward personality
REWARD_WEIGHT_BASE_RETURN=1.0
REWARD_WEIGHT_RISK_ADJUSTED=0.3
REWARD_WEIGHT_STABILITY=0.2
REWARD_WEIGHT_TRANSACTION_PENALTY=-0.1
REWARD_WEIGHT_DRAWDOWN_PENALTY=-0.4
REWARD_WEIGHT_POSITION_PENALTY=-0.05
REWARD_WEIGHT_RISK_BONUS=0.15

# Performance Settings
PARALLEL_WORKERS=4
MAX_GPU_MEMORY_GB=8

# Experiment Tracking (Optional)
ENABLE_WANDB=false
WANDB_PROJECT=crypto_trading_dual_horizon_rl
WANDB_ENTITY=your_wandb_entity

# Advanced Training Options
ENABLE_TARGET_KL=true
TARGET_KL=0.01
LEARNING_RATE_SCHEDULE=linear

# Data Processing
ENABLE_CACHING=true
FORCE_REPROCESS=false

# Logging and Monitoring
ENABLE_TENSORBOARD=true
LOG_INTERVAL_SECONDS=30
CHECKPOINT_FREQUENCY=10000